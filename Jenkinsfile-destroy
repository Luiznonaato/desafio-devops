pipeline {
    agent any

    environment {
        // Defina suas variáveis de ambiente para autenticação AWS
        AWS_DEFAULT_REGION = credentials('AWS_DEFAULT_REGION')
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }

    stages {
        stage('Checkout Terraform Configs') {
            steps {
                // Checkout do seu repositório com os arquivos Terraform
                git url: 'https://github.com/Luiznonaato/desafio-devops.git', branch: 'main'
            }
        }

        stage('Destroy Infrastructure') {
            steps {
                script {
                    dir('caminho/para/seus/arquivos/terraform') {
                        // Inicializa o Terraform
                        sh 'terraform init'
                        // Executa terraform destroy sem necessidade de confirmação manual
                        sh 'terraform destroy -auto-approve'
                    }
                }
            }
        }
    }
}
